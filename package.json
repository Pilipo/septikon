{
  "name": "Septikon",
  "version": "0.0.2",
  "description": "Port of the Septikon board game",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node build/index.js",
	"start-dev": "browserify -d -e src/main.js -t [babelify --comments false --presets es2015] > src/bundle.js && node index.js",
    "dev": "budo src/main.js:bundle.js  -- -d -e src/main.js -t [babelify --comments false --presets es2015]",
    "prebuild": "mkdirp build",
    "build": "npm run build:js && npm run build:css && npm run copy:all",
    "build:js": "browserify -d -e src/main.js -t [babelify --comments false --presets es2015] | uglifyjs -cm > js/bundle.min.js",
    "build:css": "cleancss css/main.css -o css/main.min.css",
    "build:html":  "htmlprocessor index.html -o build/index.html",
	"copy:all": "npm run copy:assets && npm run copy:phaser",
    "copy:assets": "ncp assets build/assets/",
    "copy:phaser": "ncp node_modules/phaser/build/phaser.min.js build/phaser.min.js",
    "copy:socket-client": "ncp node_modules/socket.io-client/dist/socket.io.min.js build/socket.io.min.js",
    "copy:modal": "ncp src/modal.js build/modal.js"
  },
  "keywords": [],
  "author": "Phillip Lehner & Luke Lancaster",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pilipo/septikon/issues"
  },
  "homepage": "https://github.com/pilipo/septikon#readme",
  "dependencies": {
    "express": "^4.15.2",
    "phaser": "^2.6.2",
    "socket.io": "^1.7.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babelify": "^7.3.0",
    "babel-preset-es2015": "^6.24.1",
    "browserify": "^14.3.0",
    "budo": "^10.0.3",
    "clean-css": "^3.4.17",
    "htmlprocessor": "^0.2.3",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "uglify-js": "^2.6.2"
  }
}
